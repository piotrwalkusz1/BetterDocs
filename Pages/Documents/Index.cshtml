@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer;
@model BetterDocs.Pages.Documents.List

@{
    ViewData["Title"] = Localizer["Documents"];
}

<h1>Index</h1>

<p>
    <a asp-page="Create">
        @Localizer["Create new"]
    </a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TextDocumentModels[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextDocumentModels[0].Id)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.TextDocumentModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-page="EditDocument" asp-route-id="@item.Id">@Localizer["Edit"]</a>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="id" value="@item.Id"/>
                    <input type="submit" value="@Localizer["Delete"]" asp-page-handler="Remove"/>
                </form>
            </td>
            <td>
                <a asp-controller="Documents" asp-action="GetDocumentAsPdf" asp-route-id="@item.Id">@Localizer["Download"]</a>
            </td>
        </tr>
    }
    </tbody>
</table>