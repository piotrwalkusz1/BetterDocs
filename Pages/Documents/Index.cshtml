@page
@model BetterDocs.Pages.Documents.List

@{
    ViewData["Title"] = "List";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TextDocumentModels[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextDocumentModels[0].Id)
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.TextDocumentModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-page="/EditDocument" asp-route-id="@item.Id">Edit</a>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="id" value="@item.Id"/>
                    <input type="submit" value="Delete" asp-page-handler="Remove"/>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>